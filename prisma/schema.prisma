generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  name      String
  account   String    @unique
  email     String    @unique
  hash      String
  groups    String[]
  status    Boolean   @default(true)

  @@map("users")
}

model Customer {
  id        String   @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  email     String    @unique
  hash      String
  name      String
  mobile    String
  address   String

  @@map("customers")
}

model Category {
  id        Int     @id @default(autoincrement())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  name      String  @unique
  status    Boolean @default(true)

  products  Product[]

  @@map("categories")
}

model Product {
  id          Int       @id @default(autoincrement())
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  name        String    @unique
  number      String?   @unique
  description String?
  price       Float
  cover       String
  images      String[]
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
  status      Boolean   @default(true)
  stock       Int       @default(0)

  @@map("products")
}

model File {
  id          Int      @id @default(autoincrement())
  filename    String
  path        String   
  mimetype    String
  description String?

  created_at   DateTime @default(now())

  @@map("files")
}